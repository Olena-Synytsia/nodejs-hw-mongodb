  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "contact": {
        "type": "object",
        "required": [
          "_id",
          "name",
          "phoneNumber",
          "contactType",
          "userId"
        ],
        "properties": {
          "_id": {
            "description": "Contact id",
            "type": "string",
            "example": "676428be0e1cd799d80f2599"
          },
          "name": {
            "description": "Contact's name",
            "type": "string",
            "example": "Olena S"
          },
          "phoneNumber": {
            "description": "Contact's phone number",
            "type": "string",
            "example": 123456789
          },
          "email": {
            "description": "Contact's email",
            "type": "string",
            "example": "john.doe@example.com"
          },
          "isFavourite": {
            "description": "Contact's favourite",
            "type": "boolean",
            "example": true,
            "default": false
          },
          "contactType": {
            "description": "Contact's type",
            "type": "string",
            "enum": [
              "work",
              "home",
              "personal"
            ],
            "default": "personal"
          },
          "userId": {
            "description": "ID of the user who created the contact",
            "type": "string",
            "example": "67555bf30ce8bb8a3fe48bba"
          },
          "photo": {
            "description": "Contact photo",
            "type": "string",
            "format": "binary",
            "example": "https://res.cloudinary.com/dkr0mmyqe/image/upload/v1734617278/qsxxtsbem8bvqmplo5a8.jpg",
            "default": null
          }
        }
      },
      "user": {
        "type": "object",
        "required": [
          "_id",
          "name",
          "email",
          "password"
        ],
        "properties": {
          "_id": {
            "description": "Contact id",
            "type": "string",
            "example": "676428be0e1cd799d80f2599"
          },
          "name": {
            "description": "User's name",
            "type": "string",
            "example": "Olena S"
          },
          "email": {
            "description": "User's email",
            "type": "string",
            "example": "john.doe@example.com"
          },
          "password": {
            "description": "User's password",
            "type": "string"
          },
          "role": {
            "description": "User's role",
            "type": "string",
            "default": "user"
          }
        }
      }
    },
    "responses": {
      "400": {
        "description": "BadRequestError",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "status",
                "message"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 400
                },
